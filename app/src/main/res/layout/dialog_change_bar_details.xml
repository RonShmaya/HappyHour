<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.Activity_create_bar"
    android:layout_width="300dp"
    android:layout_height="350dp"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableStart="@drawable/ic_bar"
        android:drawablePadding="25dp"
        android:text="changing bar details"
        android:textColor="#555B6E"
        android:textSize="19sp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="7dp"
        android:background="#6CA19C9C" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/dialogChangeBar_TIL_edit_last_detail"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:visibility="invisible"
                    android:fontFamily="@font/comfortaa_bold"
                    android:hint="---------"
                    android:textColorHint="#555B6E"
                    app:boxStrokeColor="#555B6E"
                    app:boxStrokeWidth="2dp"
                    app:counterEnabled="true"
                    app:errorEnabled="true"
                    app:counterMaxLength="15"
                    app:hintTextColor="#555B6E">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dialogChangeBar_TIETL_edit_last_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="30"
                        android:visibility="invisible"
                        android:fontFamily="@font/comfortaa_bold"
                        android:imeOptions="actionDone"
                        android:maxLength="15"
                        android:outlineAmbientShadowColor="#555B6E"
                        android:shadowColor="#555B6E"
                        android:textColor="#555B6E" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/dialogChangeBar_TIL_changeBarType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:visibility="invisible"
                    android:fontFamily="@font/comfortaa_bold"
                    android:hint="Bar Type"
                    android:textColorHint="#555B6E"
                    app:boxStrokeColor="#555B6E"
                    app:boxStrokeWidth="2dp"
                    app:hintTextColor="#555B6E"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/dialogChangeBar_ACTV_barTypeChange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="30"
                        android:visibility="invisible"
                        android:fontFamily="@font/comfortaa_bold"
                        android:outlineAmbientShadowColor="#555B6E"
                        android:shadowColor="#555B6E"
                        android:textColor="#555B6E"
                        android:inputType="none"
                        />

                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialogAddBar_BTN_change"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#555B6E"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Change"
        android:textColor="#FAF9F9"
        android:textSize="15sp"
        app:checkedIconTint="@color/white"
        app:cornerRadius="20dp" />

</LinearLayout>