<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Activity_user_connect">

    <ImageView
        android:id="@+id/main_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAF9F9"
        android:scaleType="fitCenter"
        android:src="@drawable/img_background" />

    <include
        android:id="@+id/app_top_main"
        layout="@layout/app_top_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_top_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/connect_BTN_login"
                android:layout_width="270dp"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FF577F"
                android:text="login"
                android:textColor="#FAF9F9"
                android:textSize="15sp"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/connect_BTN_privateAccount"
                android:layout_width="270dp"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FAF9F9"
                android:text="create private account"
                android:textColor="#FF577F"
                android:textSize="15sp"
                app:cornerRadius="20dp"
                app:strokeColor="#FF577F"
                app:strokeWidth="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/connect_BTN_businessAccount"
                android:layout_width="270dp"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FAF9F9"
                android:text="create Business account"
                android:textColor="#FF577F"
                android:textSize="15sp"
                app:cornerRadius="20dp"
                app:strokeColor="#FF577F"
                app:strokeWidth="5dp" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>