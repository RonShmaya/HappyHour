<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.private_account.Activity_reservation">

    <ImageView
        android:id="@+id/main_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAF9F9"
        android:scaleType="fitCenter"
        android:src="@drawable/img_background" />
    <include
        android:id="@+id/app_top_main"
        layout="@layout/app_top_bar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_top_main"
        android:layout_marginTop="15dp"
        >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Business time:"
            android:textColor="#555B6E"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="7dp"
                app:cardBackgroundColor="#555B6E"
                app:cardCornerRadius="30dp"
                app:cardElevation="7dp">


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/reservation_LBL_open_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:gravity="center"
                    android:text="00 : 00"
                    android:textColor="#FF577F"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="-"
                android:textColor="#555B6E"
                android:textSize="19sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="7dp"
                app:cardBackgroundColor="#555B6E"
                app:cardCornerRadius="30dp"
                app:cardElevation="7dp">


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/reservation_LBL_close_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:gravity="center"
                    android:text="00 : 00"
                    android:textColor="#FF577F"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="7dp"
            android:background="#6CA19C9C" />


    <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Pick day:"
            android:textColor="#555B6E"
            android:textSize="17sp"
            android:layout_marginTop="7dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="7dp"
                app:cardBackgroundColor="#555B6E"
                app:cardCornerRadius="30dp"
                app:cardElevation="7dp">


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/reservation_LBL_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:gravity="center"
                    android:text="--/--/--"
                    android:textColor="#FF577F"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/reservation_FAB_addDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:backgroundTint="#FF577F"
                android:clickable="true"
                app:borderWidth="0dp"
                app:fabCustomSize="50dp"
                app:srcCompat="@drawable/ic_date"
                app:tint="#555B6E"
                app:useCompatPadding="false" />
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Pick around time:"
            android:textColor="#555B6E"
            android:textSize="17sp"
            android:layout_marginTop="7dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="7dp"
                app:cardBackgroundColor="#555B6E"
                app:cardCornerRadius="30dp"
                app:cardElevation="7dp">


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/reservation_LBL_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:gravity="center"
                    android:text="-- : --"
                    android:textColor="#FF577F"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/reservation_FAB_addTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:backgroundTint="#FF577F"
                android:clickable="true"
                app:borderWidth="0dp"
                app:fabCustomSize="50dp"
                app:srcCompat="@drawable/ic_time"
                app:tint="#555B6E"
                app:useCompatPadding="false" />
        </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bar_tables_LST_tables"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_margin="15dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />




    </LinearLayout>
    </ScrollView>
</RelativeLayout>