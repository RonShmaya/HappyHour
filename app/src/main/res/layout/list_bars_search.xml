<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="7dp"
    app:cardCornerRadius="15dp"
    android:background="#FAF9F9"
    app:cardElevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/listBarSearch_IMG"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:padding="3dp"
            app:shapeAppearanceOverlay="@style/RoundedImageView"
            android:scaleType="centerCrop"
            android:src="@drawable/img_bar_basic" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/listBarSearch_LBL_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="bar name"
                android:textColor="#555B6E"
                android:textSize="13sp"
                android:textStyle="bold" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/listBarSearch_LBL_happyHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_bar"
                android:gravity="center_vertical"
                android:layout_marginStart="7dp"
                android:drawablePadding="5dp"
                android:layout_marginBottom="5dp"
                android:text="Happy Hour"
                android:textColor="#555B6E"
                android:textSize="11sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/listBarSearch_LBL_musicType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_music"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:layout_marginStart="7dp"
                android:layout_marginBottom="5dp"
                android:text=""
                android:textColor="#555B6E"
                android:textSize="11sp" />


        </LinearLayout>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>