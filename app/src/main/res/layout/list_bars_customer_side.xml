<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="7dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/list_bar_customer_IMG"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_bar_basic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_bar_customer_LBL_name"
            android:padding="3dp"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Jono"
            android:textColor="#555B6E"
            android:textSize="15sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/list_bar_customer_RAB_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:numStars="5"
            android:rating="0"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:theme="@style/RatingBar"
            />
    </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/list_bar_customer_LBL_barType"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="4"
                    android:text="description...."
                    android:textColor="#555B6E"
                    android:textSize="15sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/list_bar_customer_LBL_followers"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="3dp"
                android:layout_weight="4"
                android:text="--- followers"
                android:textColor="#555B6E"
                android:textSize="13sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/list_bar_customer_BTN_follow"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:insetTop="3dp"
                    android:insetBottom="3dp"
                    app:icon="@drawable/ic_star"
                    app:strokeWidth="1dp"
                    app:strokeColor="#646B6767"
                    app:iconSize="30dp"
                    app:iconTint="#FF577F" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>