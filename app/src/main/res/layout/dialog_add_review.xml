<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:background="#FAF9F9"
    tools:context=".activities.business_account.Activity_create_bar">



    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawablePadding="5dp"
                    android:text="add your experience"
                    android:drawableStart="@drawable/ic_muscles"
                    android:textColor="#555B6E"
                    android:textSize="19sp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="7dp"
                    android:background="#6CA19C9C" />


                <RatingBar
                    android:id="@+id/dialogAddReview_RAB_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="5dp"
                    android:background="#FAF9F9"
                    android:numStars="5"
                    android:rating="0"
                    android:theme="@style/RatingBar" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/dialogAddReview_TIL_description"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/comfortaa_bold"
                    app:errorEnabled="true"
                    android:hint="Description"
                    android:textColorHint="#555B6E"
                    app:boxStrokeColor="#555B6E"
                    app:boxStrokeWidth="2dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="20"
                    app:hintTextColor="#555B6E">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dialogAddReview_TIETL_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="30"
                        android:fontFamily="@font/comfortaa_bold"
                        android:imeOptions="actionDone"
                        android:maxLength="20"
                        android:outlineAmbientShadowColor="#555B6E"
                        android:shadowColor="#555B6E"
                        android:textColor="#555B6E" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/dialogAddReview_BTN_create"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:backgroundTint="#555B6E"
                    android:text="Create"
                    app:checkedIconTint="@color/white"
                    android:textColor="#FAF9F9"
                    android:textSize="15sp"
                    app:cornerRadius="20dp" />

            </LinearLayout>


    </ScrollView>


</RelativeLayout>