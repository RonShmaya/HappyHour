<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="7dp"
    app:cardCornerRadius="15dp"
    android:background="#FAF9F9"
    app:cardElevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/listBarFollowing_IMG"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:padding="3dp"
            app:shapeAppearanceOverlay="@style/RoundedImageView"
            android:scaleType="centerCrop"
            android:src="@drawable/imgfg" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/listBarFollowing_LBL_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="bar name"
                android:textColor="#555B6E"
                android:textSize="15sp"
                android:textStyle="bold" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/listBarFollowing_LBL_barType"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginStart="7dp"
                android:layout_marginBottom="5dp"
                android:text="bar Type"
                android:textColor="#555B6E"
                android:textSize="13sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/listBarFollowing_LBL_business_hours"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginStart="7dp"
                android:layout_marginBottom="5dp"
                android:text="business hours: 00:00 - 00:00"
                android:textColor="#555B6E"
                android:textSize="11sp" />



        </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:padding="5dp">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_bar"
            android:gravity="center_vertical"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="5dp"
            android:text="Happy Hour"
            android:textColor="#555B6E"
            android:textSize="11sp" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/listBarFollowing_LBL_happy_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="5dp"
            android:text="1 + 1 every day"
            android:textColor="#555B6E"
            android:textSize="11sp" />
    </LinearLayout>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>